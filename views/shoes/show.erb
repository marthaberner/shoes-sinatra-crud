<h1>About This Shoe</h1>
<h3><a href="/shoes/<%= shoes[:id] %>/edit">Edit</a></h3>

<form action="/shoes/<%= shoes[:id] %>" method="post">
  <input type="hidden" name="_method" value="delete"/>
  <input type="submit" value="Delete">
</form>

<table border="black">
  <thead>
  <tr class="title">
    <td>Name</td>
    <td>Size</td>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= shoes[:name] %></td>
    <td><%= shoes[:size] %></td>
  </tr>
  </tbody>
</table>